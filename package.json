{
	"name": "sveltefirets",
	"version": "0.0.16",
	"scripts": {
		"dev": "svelte-kit dev",
		"build": "npm run package && svelte-kit build",
		"preview": "svelte-kit preview",
		"check": "svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --ignore-path .gitignore  --check --plugin-search-dir=. . && eslint --ignore-path .gitignore .",
		"format": "prettier --ignore-path .gitignore --write --plugin-search-dir=. .",
		"package": "svelte-kit package",
		"release": "npm run package && cd package && npm publish",
		"postversion": "git push && git push --tags && npm run release"
	},
	"dependencies": {
		"firebase": "^9.6.1"
	},
	"devDependencies": {
		"@sveltejs/adapter-vercel": "^1.0.0-next.32",
		"@sveltejs/kit": "^1.0.0-next.202",
		"@typescript-eslint/eslint-plugin": "^4.29.3",
		"@typescript-eslint/parser": "^4.29.3",
		"eslint": "^7.22.0",
		"eslint-config-prettier": "^8.1.0",
		"eslint-plugin-svelte3": "^3.2.1",
		"prettier": "^2.4.1",
		"prettier-plugin-svelte": "^2.5.1",
		"svelte": "^3.44.3",
		"svelte-check": "^2.2.11",
		"svelte-preprocess": "^4.9.8",
		"svelte2tsx": "^0.4.12",
		"sveltefirets": "file:./package",
		"tslib": "^2.0.0",
		"typescript": "^4.5.4"
	},
	"type": "module",
	"main": "./index-client.js",
	"exports": {
		".": {
			"node": "./index-server.js",
			"browser": "./index-client.js"
		},
		"./package.json": "./package.json"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/jacobbowdoin/sveltefire-ts.git"
	},
	"keywords": [
		"Svelte",
		"SvelteKit",
		"Firebase",
		"ESM",
		"Typescript"
	],
	"author": "Jacob Bowdoin",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/jacobbowdoin/sveltefire-ts/issues"
	},
	"homepage": "https://github.com/jacobbowdoin/sveltefire-ts#readme"
}
